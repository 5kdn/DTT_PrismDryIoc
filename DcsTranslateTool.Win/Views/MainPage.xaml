<UserControl
    x:Class="DcsTranslateTool.Win.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:DcsTranslateTool.Win.Properties"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    Style="{StaticResource BaseUserControlStyle}"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Margin="{StaticResource MediumLeftRightMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Style="{StaticResource PageTitleStyle}"
                Text="{x:Static properties:Resources.MainPageTitle}" />
            <Button
                Grid.Column="1"
                Margin="{StaticResource SmallLeftMargin}"
                Content="Fetch"
                Command="{Binding FetchCommand}" />
            <Button
                Grid.Column="2"
                Margin="{StaticResource SmallLeftMargin}"
                Content="{x:Static properties:Resources.SettingsPageTitle}"
                Command="{Binding OpenSettingsCommand}" />
        </Grid>
        <mah:MetroTabControl Grid.Row="1" Margin="{StaticResource MediumLeftRightMargin}">
            <mah:MetroTabItem Header="Aircraft">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TreeView x:Name="LocalAircraftTree" ItemsSource="{Binding LocalAircraftRoot.Children}">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <TextBlock Text="{Binding Name}" />
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectedItemChanged">
                                <i:InvokeCommandAction Command="{Binding LoadLocalTreeCommand}" CommandParameter="{Binding SelectedItem, ElementName=LocalAircraftTree}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TreeView>
                    <UniformGrid Grid.Column="1" Rows="3" Width="64">
                        <Button Height="32" Margin="0,16" Content="Download" />
                        <Button Height="32" Margin="0,16" Content="Apply" />
                        <Button Height="32" Margin="0,16" Content="Upload" />
                    </UniformGrid>
                    <TreeView Grid.Column="2" ItemsSource="{Binding RepoAircraftTree.Children}">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <TextBlock Text="{Binding Name}" />
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </mah:MetroTabItem>
            <mah:MetroTabItem Header="DLC Campaign" />
        </mah:MetroTabControl>
    </Grid>
</UserControl>
