<UserControl x:Class="DcsTranslateTool.Win.Views.UploadPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:DcsTranslateTool.Win.Properties"
             xmlns:vm="clr-namespace:DcsTranslateTool.Win.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:conv="clr-namespace:DcsTranslateTool.Win.Converters"
             xmlns:enums="clr-namespace:DcsTranslateTool.Win.Enums"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             d:DataContext="{d:DesignInstance Type=vm:UploadViewModel}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:FileEntryToIconKindConverter x:Key="FileEntryToIconKindConverter"/>
        <conv:FileChangeTypeToBrushConverter x:Key="FileChangeTypeToBrushConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Title bar -->
        <Grid Margin="{StaticResource MediumLeftRightMargin}">
            <TextBlock Style="{StaticResource PageTitleStyle}"
                       Margin="{StaticResource MediumLeftMargin}"
                       Text="{x:Static properties:Resources.UploadPageTitle}" />
        </Grid>

        <Grid Grid.Row="1" Margin="{StaticResource MediumLeftRightMargin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <CheckBox Content="{x:Static properties:Resources.UploadPageFilterAllContent}"
                          Margin="{StaticResource SmallRightMargin}"
                          IsChecked="{Binding Filter.All, Mode=TwoWay}"/>
                <CheckBox Margin="{StaticResource SmallRightMargin}"
                          IsChecked="{Binding Filter.Modified, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileAlertOutline"
                                                 Foreground="{StaticResource Brush.Filter.Text1}" />
                        <TextBlock Text="{x:Static properties:Resources.UploadPageFilterModifiedText}"
                                   Foreground="{StaticResource Brush.Filter.Text1}"/>
                    </StackPanel>
                </CheckBox>
                <CheckBox Margin="{StaticResource SmallRightMargin}"
                          IsChecked="{Binding Filter.Added, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileUploadOutline"
                                                 Foreground="{StaticResource Brush.Filter.Text2}" />
                        <TextBlock Text="{x:Static properties:Resources.UploadPageFilterLocalOnlyText}"
                                   Foreground="{StaticResource Brush.Filter.Text2}"/>
                    </StackPanel>
                </CheckBox>
                <CheckBox Margin="{StaticResource SmallRightMargin}"
                          IsChecked="{Binding Filter.Unchanged, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileCheckOutline"
                                                 Foreground="{StaticResource Brush.Filter.Text3}" />
                        <TextBlock Text="{x:Static properties:Resources.DownloadPageFilterUnchangedText}"
                                   Foreground="{StaticResource Brush.Filter.Text3}"/>
                    </StackPanel>
                </CheckBox>
                <CheckBox Margin="{StaticResource SmallRightMargin}"
                          IsChecked="{Binding Filter.Deleted, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileRemoveOutline"
                                                 Foreground="{StaticResource Brush.Filter.Text4}" />
                        <TextBlock Text="{x:Static properties:Resources.UploadPageFilterRepoOnlyText}"
                                   Foreground="{StaticResource Brush.Filter.Text4}"/>
                    </StackPanel>
                </CheckBox>

            </StackPanel>
            <TabControl
                Grid.Row="1"
                Margin="{StaticResource MediumLeftRightMargin}"
                SelectedIndex="{Binding SelectedTabIndex}"
                ItemsSource="{Binding Tabs}">
                <TabControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:UploadTabItemViewModel}">
                        <TextBlock Text="{Binding Title}"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate DataType="{x:Type vm:UploadTabItemViewModel}">
                        <TreeView x:Name="TreeViewControl" ItemsSource="{Binding Root.Children}">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                        <Setter Property="Visibility"
                                                Value="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding CheckState, Mode=TwoWay}"
                                                  IsEnabled="{Binding CanCheck}" />
                                        <materialDesign:PackIcon Margin="{StaticResource XSmallLeftMargin}">
                                            <materialDesign:PackIcon.Foreground>
                                                <MultiBinding Converter="{StaticResource FileChangeTypeToBrushConverter}">
                                                    <Binding Path="ChangeType"/>
                                                    <Binding Source="{x:Static enums:ChangeTypeMode.Upload}"/>
                                                </MultiBinding>
                                            </materialDesign:PackIcon.Foreground>

                                            <materialDesign:PackIcon.Kind>
                                                <MultiBinding Converter="{StaticResource FileEntryToIconKindConverter}">
                                                    <Binding Path="IsDirectory"/>
                                                    <Binding Path="ChangeType"/>
                                                    <Binding Source="{x:Static enums:ChangeTypeMode.Upload}"/>
                                                </MultiBinding>
                                            </materialDesign:PackIcon.Kind>
                                        </materialDesign:PackIcon>
                                        <TextBlock Text="{Binding Name}" Margin="{StaticResource XSmallLeftMargin}">
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{StaticResource FileChangeTypeToBrushConverter}">
                                                    <Binding Path="ChangeType"/>
                                                    <Binding Source="{x:Static enums:ChangeTypeMode.Upload}"/>
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </Grid>

        <Grid Grid.Row="2" Height="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="{x:Static properties:Resources.UploadPageFetchButtonContent}" Command="{Binding FetchCommand}" />

            <Button Grid.Column="1"
                    Margin="{StaticResource SmallLeftMargin}"
                    Content="{x:Static properties:Resources.UploadPageCreatePRButtonContent}"
                    IsEnabled="{Binding IsCreatePullRequestDialogButtonEnabled}"
                    Command="{Binding OpenCreatePullRequestDialogCommand}"/>
        </Grid>
    </Grid>
</UserControl>
