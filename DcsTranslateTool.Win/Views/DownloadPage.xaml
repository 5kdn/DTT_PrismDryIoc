<UserControl
    x:Class="DcsTranslateTool.Win.Views.DownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:DcsTranslateTool.Win.Properties"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:vm="clr-namespace:DcsTranslateTool.Win.ViewModels"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:conv="clr-namespace:DcsTranslateTool.Win.Converters"
    xmlns:enums="clr-namespace:DcsTranslateTool.Win.Enums"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    d:DataContext="{d:DesignInstance Type=vm:DownloadViewModel}"
    Style="{StaticResource BaseUserControlStyle}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:FileEntryToIconKindConverter x:Key="FileEntryToIconKindConverter"/>
        <conv:FileChangeTypeToBrushConverter x:Key="FileChangeTypeToBrushConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- The Mahapps Metro title bar -->
        <Grid Margin="{StaticResource MediumLeftRightMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Style="{StaticResource PageTitleStyle}"
                Margin="{StaticResource MediumLeftMargin}"
                Text="{x:Static properties:Resources.DownloadPageTitle}" />
            <Button
                Grid.Column="1"
                Margin="{StaticResource SmallLeftMargin}"
                Content="Fetch"
                Command="{Binding FetchCommand}" />
            <Button
                Grid.Column="2" Width="64"
                Margin="{StaticResource SmallLeftMargin}"
                Command="{Binding OpenSettingsCommand}">
                <iconPacks:PackIconMaterial Kind="Cog" HorizontalAlignment="Center" />
            </Button>
        </Grid>

        <Grid Grid.Row="1" Margin="{StaticResource MediumLeftRightMargin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <CheckBox Content="All"  Margin="{StaticResource SmallRightMargin}" IsChecked="{Binding Filter.All, Mode=TwoWay}"/>
                <CheckBox Margin="{StaticResource SmallRightMargin}" IsChecked="{Binding Filter.Modified, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="FileAlertOutline" Foreground="{x:Static Brushes.Tomato}" Width="16" Height="16"/>
                        <TextBlock Text="変更/更新" Foreground="{x:Static Brushes.Tomato}" />
                    </StackPanel>
                </CheckBox>
                <CheckBox Margin="{StaticResource SmallRightMargin}" IsChecked="{Binding Filter.Deleted, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="FileDownloadOutline" Foreground="{x:Static Brushes.MediumSeaGreen}" Width="16" Height="16"/>
                        <TextBlock Text="未DL" Foreground="{x:Static Brushes.MediumSeaGreen}" />
                    </StackPanel>
                </CheckBox>
                <CheckBox Margin="{StaticResource SmallRightMargin}" IsChecked="{Binding Filter.Unchanged, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="FileCheckOutline" Foreground="{x:Static Brushes.DimGray}" Width="16" Height="16"/>
                        <TextBlock Text="DL済" Foreground="{x:Static Brushes.DimGray}" />
                    </StackPanel>
                </CheckBox>
                <CheckBox Margin="{StaticResource SmallRightMargin}" IsChecked="{Binding Filter.Added, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="FileRemoveOutline" Foreground="{x:Static Brushes.Silver}" Width="16" Height="16"/>
                        <TextBlock Text="追加" Foreground="{x:Static Brushes.Silver}" />
                    </StackPanel>
                </CheckBox>
            </StackPanel>
            <mah:MetroTabControl
            Grid.Row="1"
            Margin="{StaticResource MediumLeftRightMargin}"
            SelectedIndex="{Binding SelectedTabIndex}"
            ItemsSource="{Binding Tabs}">
                <mah:MetroTabControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:DownloadTabItemViewModel}">
                        <TextBlock Text="{Binding Title}"/>
                    </DataTemplate>
                </mah:MetroTabControl.ItemTemplate>
                <mah:MetroTabControl.ContentTemplate>
                    <DataTemplate DataType="{x:Type vm:DownloadTabItemViewModel}">
                        <TreeView x:Name="TreeViewControl" ItemsSource="{Binding Root.Children}">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                    <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding CheckState, Mode=TwoWay}" IsEnabled="{Binding CanCheck}" />
                                        <iconPacks:PackIconMaterial Margin="{StaticResource XSmallLeftMargin}" Width="16" Height="16">
                                            <iconPacks:PackIconMaterial.Foreground>
                                                <MultiBinding Converter="{StaticResource FileChangeTypeToBrushConverter}">
                                                    <Binding Path="ChangeType"/>
                                                    <Binding Source="{x:Static enums:ChangeTypeMode.Download}"/>
                                                </MultiBinding>
                                            </iconPacks:PackIconMaterial.Foreground>
                                            <iconPacks:PackIconMaterial.Kind>
                                                <MultiBinding Converter="{StaticResource FileEntryToIconKindConverter}">
                                                    <Binding Path="IsDirectory"/>
                                                    <Binding Path="ChangeType"/>
                                                    <Binding Source="{x:Static enums:ChangeTypeMode.Download}"/>
                                                </MultiBinding>
                                            </iconPacks:PackIconMaterial.Kind>
                                        </iconPacks:PackIconMaterial>
                                        <TextBlock Text="{Binding Name}" Margin="{StaticResource XSmallLeftMargin}">
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{StaticResource FileChangeTypeToBrushConverter}">
                                                    <Binding Path="ChangeType"/>
                                                    <Binding Source="{x:Static enums:ChangeTypeMode.Download}"/>
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </DataTemplate>
                </mah:MetroTabControl.ContentTemplate>
            </mah:MetroTabControl>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Width="96"
                    Content="Download"
                    Command="{Binding DownloadCommand}"
                    IsEnabled="{Binding IsDownloadButtonEnabled}"/>
            <Button Width="96"
                    Margin="{StaticResource SmallLeftMargin}"
                    Content="Apply"
                    Command="{Binding ApplyCommand}"
                    IsEnabled="{Binding IsApplyButtonEnabled}"/>
            <Button Width="96"
                    Margin="{StaticResource SmallLeftMargin}"
                    Content="Open Directory"
                    Command="{Binding OpenDirectoryCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>