<UserControl x:Class="DcsTranslateTool.Win.Views.DownloadPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:DcsTranslateTool.Win.Properties"
             xmlns:vm="clr-namespace:DcsTranslateTool.Win.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:conv="clr-namespace:DcsTranslateTool.Win.Converters"
             xmlns:enums="clr-namespace:DcsTranslateTool.Win.Enums"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             d:DataContext="{d:DesignInstance Type=vm:DownloadViewModel}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:FileEntryToIconKindConverter x:Key="FileEntryToIconKindConverter"/>
        <conv:FileChangeTypeToBrushConverter x:Key="FileChangeTypeToBrushConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Title bar -->
        <Grid Margin="{StaticResource MediumLeftRightMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Style="{StaticResource PageTitleStyle}"
                Margin="{StaticResource MediumLeftMargin}"
                Text="{x:Static properties:Resources.DownloadPageTitle}" />

        </Grid>

        <Grid Grid.Row="1" Margin="{StaticResource MediumLeftRightMargin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <CheckBox Content="{x:Static properties:Resources.DownloadPageFilterAllContent}"
                          Margin="{StaticResource SmallRightMargin}"
                          IsChecked="{Binding Filter.All, Mode=TwoWay}"/>
                <CheckBox Margin="{StaticResource SmallRightMargin}"
                          IsChecked="{Binding Filter.Modified, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileAlertOutline" Foreground="{StaticResource Brush.Filter.Text1}" />
                        <TextBlock Text="{x:Static properties:Resources.DownloadPageFilterModifiedText}"
                                   Foreground="{StaticResource Brush.Filter.Text1}" />
                    </StackPanel>
                </CheckBox>
                <CheckBox Margin="{StaticResource SmallRightMargin}" IsChecked="{Binding Filter.RepoOnly, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileDownloadOutline"
                                                 Foreground="{StaticResource Brush.Filter.Text2}" />
                        <TextBlock Text="{x:Static properties:Resources.DownloadPageFilterRepoOnlyText}"
                                   Foreground="{StaticResource Brush.Filter.Text2}" />
                    </StackPanel>
                </CheckBox>
                <CheckBox Margin="{StaticResource SmallRightMargin}" IsChecked="{Binding Filter.Unchanged, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileCheckOutline" Foreground="{StaticResource Brush.Filter.Text3}" />
                        <TextBlock Text="{x:Static properties:Resources.DownloadPageFilterUnchangedText}"
                                   Foreground="{DynamicResource MaterialDesign.Brush.Foreground.}" />
                    </StackPanel>
                </CheckBox>
                <CheckBox Margin="{StaticResource SmallRightMargin}" IsChecked="{Binding Filter.LocalOnly, Mode=TwoWay}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileRemoveOutline" Foreground="{StaticResource Brush.Filter.Text4}" />
                        <TextBlock Text="{x:Static properties:Resources.DownloadPageFilterLocalOnlyText}"
                                   Foreground="{StaticResource Brush.Filter.Text4}" />
                    </StackPanel>
                </CheckBox>
            </StackPanel>

            <TabControl
            Grid.Row="1"
            Margin="{StaticResource MediumLeftRightMargin}"
            SelectedIndex="{Binding SelectedTabIndex}"
            ItemsSource="{Binding Tabs}">
                <TabControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:DownloadTabItemViewModel}">
                        <TextBlock Text="{Binding Title}"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate DataType="{x:Type vm:DownloadTabItemViewModel}">
                        <TreeView x:Name="TreeViewControl" ItemsSource="{Binding Root.Children}">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                    <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding CheckState, Mode=TwoWay}" IsEnabled="{Binding CanCheck}" />
                                        <materialDesign:PackIcon Margin="{StaticResource XSmallLeftMargin}">
                                            <materialDesign:PackIcon.Foreground>
                                                <MultiBinding Converter="{StaticResource FileChangeTypeToBrushConverter}">
                                                    <Binding Path="ChangeType"/>
                                                    <Binding Source="{x:Static enums:ChangeTypeMode.Download}"/>
                                                </MultiBinding>
                                            </materialDesign:PackIcon.Foreground>
                                            <materialDesign:PackIcon.Kind>
                                                <MultiBinding Converter="{StaticResource FileEntryToIconKindConverter}">
                                                    <Binding Path="IsDirectory"/>
                                                    <Binding Path="ChangeType"/>
                                                    <Binding Source="{x:Static enums:ChangeTypeMode.Download}"/>
                                                </MultiBinding>
                                            </materialDesign:PackIcon.Kind>
                                        </materialDesign:PackIcon>
                                        <TextBlock Text="{Binding Name}" Margin="{StaticResource XSmallLeftMargin}">
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{StaticResource FileChangeTypeToBrushConverter}">
                                                    <Binding Path="ChangeType"/>
                                                    <Binding Source="{x:Static enums:ChangeTypeMode.Download}"/>
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Width="96"
                    Command="{Binding FetchCommand}" >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Reload" Margin="0,1.61,0,0" />
                    <TextBlock Text="{x:Static properties:Resources.DownloadPageFetchButtonContent}"/>
                </StackPanel>
            </Button>

            <Button Width="96"
                    Margin="{StaticResource SmallLeftMargin}"
                    Command="{Binding DownloadCommand}"
                    IsEnabled="{Binding IsDownloadButtonEnabled}" >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Download" Margin="0,1.61,0,0" />
                    <TextBlock Text="{x:Static properties:Resources.DownloadPageDownloadButtonContent}"/>
                </StackPanel>
            </Button>

            <Button Width="96"
                    Margin="{StaticResource SmallLeftMargin}"
                    Command="{Binding ApplyCommand}"
                    IsEnabled="{Binding IsApplyButtonEnabled}" >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ArchiveArrowDownOutline" Margin="0,1.61,0,0" />
                    <TextBlock Text="{x:Static properties:Resources.DownloadPageApplyButtonContent}"/>
                </StackPanel>
            </Button>

            <Button Width="96"
                    Margin="{StaticResource SmallLeftMargin}"
                    Command="{Binding OpenDirectoryCommand}" >
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FolderOpenOutline" Margin="0,1.61,0,0" />
                    <TextBlock Text="{x:Static properties:Resources.DownloadPageOpenDirectoryButtonContent}"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>