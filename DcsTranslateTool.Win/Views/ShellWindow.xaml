<Window x:Class="DcsTranslateTool.Win.Views.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:properties="clr-namespace:DcsTranslateTool.Win.Properties"
        xmlns:viewmodels="clr-namespace:DcsTranslateTool.Win.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:ShellViewModel}"
        mc:Ignorable="d"
        Style="{DynamicResource CustomWindow}"
        Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        Title="{x:Static properties:Resources.AppDisplayName}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Unloaded">
            <i:InvokeCommandAction Command="{Binding UnloadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!--コントロール部-->
        <Grid>
            <Button Width="64"
                    HorizontalAlignment="Left"
                    Command="{Binding GoBackCommand}"
                    ToolTip="{x:Static properties:Resources.ShellGoBackButton}">
                <materialDesign:PackIcon Kind="ArrowLeft" />
            </Button>

            <Button Width="64"
                    HorizontalAlignment="Right"
                    Margin="{StaticResource SmallLeftMargin}"
                    Command="{Binding OpenSettingsCommand}">
                <materialDesign:PackIcon Kind="Cog" />
            </Button>
        </Grid>

        <!--body-->
        <ContentControl x:Name="shellContentControl" Grid.Row="1" />
        
        <!--Snackbar-->
        <materialDesign:Snackbar Grid.RowSpan="2"
                                 MessageQueue="{Binding MessageQueue}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Bottom" />
    </Grid>
</Window>
