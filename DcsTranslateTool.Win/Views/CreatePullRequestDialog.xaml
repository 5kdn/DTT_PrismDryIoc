<UserControl x:Class="DcsTranslateTool.Win.Views.CreatePullRequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:properties="clr-namespace:DcsTranslateTool.Win.Properties"
        mc:Ignorable="d"
        Style="{StaticResource BaseUserControlStyle}"
        Height="450" Width="800">
    <StackPanel Margin="{StaticResource MediumLeftTopRightBottomMargin}">
        <StackPanel>
            <TextBlock Text="{Binding PRTitle}"/>
        </StackPanel>
        <ListView ItemsSource="{Binding Files}"/>
        <Button Content="Create PR" Command="{Binding CreatePullRequestCommand}"/>
    </StackPanel>
</UserControl>
